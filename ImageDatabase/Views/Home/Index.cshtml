@{
    ViewBag.Title = "Home Page";
}
@model List<ImageDatabase.Models.ImageModel>

@using (Html.BeginForm("UploadImage", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        <label for="imageFile">Select an image:</label>
        <input type="file" id="imageFile" name="imageFile" />
    </div>

    <div>
        <input type="submit" value="Upload Image" />
    </div>
}


@foreach (var imageModel in Model)
{
    <div>s
        <p>Image ID: @imageModel.ImageId</p>
        @if (imageModel.ImageData != null && imageModel.ImageData.Length > 0)
        {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(imageModel.ImageData)" alt="Image" />
        }
        else
        {
            <p>No image available</p>
        }
    </div>
}